<Window x:Class="FlightBoardX.MyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyDialog" Height="150" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Text="Enter some ICAO for start point:" Margin="10"  />
        <TextBox x:Name="ResponseTextBox" Margin="10" MaxLength="4" TextAlignment="Center" CharacterCasing="Upper"  />
        <Button Content="OK" Click="OKButton_Click" />
    </StackPanel>
</Window>
